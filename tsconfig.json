{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es2017",
            "es2018.regexp"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false, // true will break json import
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressExcessPropertyErrors": true,
        "strict": false,
        "pretty": true,
        "sourceMap": true,
        "outDir": "./dist",
        "types": [
            "node",
            "mocha"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "files": [
        "./main_rpc.ts"
    ],
    "exclude": [
        "./test/**/*.spec.ts"
    ]
}
