{
  "name": "hs-sim-server",
  "version": "0.0.1",
  "description": "Middle tier between core HS-Sim and and HS-Sim Client",
  "main": "index.js",
  "scripts": {
    "start": "better-npm-run start",
    "watch": "better-npm-run watch:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start": {
      "command": "node src/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "hs*"
      }
    },
    "watch:server": {
      "command": "nodemon --watch ./src src/server",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "hs*"
      }
    }
  },
  "engines": {
    "node": ">=7.10.1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-npm-run": "^0.0.15",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "config": "^1.26.1",
    "cross-env": "^5.0.1",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "http-status-codes": "^1.2.0",
    "joi": "^10.6.0",
    "js-yaml": "^3.9.0",
    "node-version-checker": "^2.0.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-rc.2",
    "verror": "^1.10.0"
  }
}
