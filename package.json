{
  "name": "hs_sim",
  "version": "0.3.0",
  "description": "HS simulator",
  "main": "main.ts",
  "dependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.2",
    "eslint": "^3.19.0",
    "tslint": "^5.9.1"
  },
  "devDependencies": {
    "dependency-tree": "^6.0.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1",
    "yargs": "^8.0.2"
  },
  "scripts": {
    "build": "tsc --pretty --module commonjs --target es2017 --outDir ./target main_rpc.ts",
    "build2": "tsc --pretty --outDir ./target main_rpc.ts",
    "ts-version": "tsc -v",
    "test": "nyc mocha --timeout=3000",
    "coverage": "nyc --reporter=html --reporter=text mocha",
    "coverage-ts": "echo https://istanbul.js.org/docs/tutorials/typescript/",
    "deps": "dependency-tree --directory ./target/ ./target/main_rpc.js > deps.json"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c69/hs-sim.git"
  },
  "keywords": [
    "hs",
    "simulator"
  ],
  "author": "Constantine Vesna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c69/hs-sim/issues"
  },
  "homepage": "https://github.com/c69/hs-sim#readme"
}
